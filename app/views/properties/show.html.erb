<h3>物件詳細</h3>
<div class="show_property">
  <p><b>物件名：</b><span><%= @property.name %></span></p>
  <p><b>賃料：</b><span><%= converting_to_jpy(@property.rent) %></span></p>
  <p><b>住所：</b><span><%= @property.address %></span></p>
  <p><b>築年数：</b><span><%= @property.age %>年</span></p>
  <p><b>備考：</b><span><%= @property.notes %></span></p>
</div>
<hr>
  <% n = 1 %>
  <% @property.stations.each do |station| %>
    <h3>最寄り駅<%= n %></h3>
    <div class="show_property">
      <p><b>路線名：</b><span><%= station.line_name %></span></p>
      <p><b>駅名：</b><span><%= station.station_name %></span></p>
      <p><b>徒歩分数：</b><span><%= station.on_foot %></span></p>
    </div>
    <% n += 1 %>
  <% end %>
<%= link_to '戻る', properties_path %>